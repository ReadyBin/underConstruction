<Window x:Class="Vishnu.DemoApplications.ConstantNodeUserControlDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Vishnu.DemoApplications.ConstantNodeUserControlDemo"
        xmlns:ctrl="clr-namespace:Vishnu.UserControls;assembly=ConstantNodeUserControl"
        mc:Ignorable="d"
        Title="MainWindow"  SizeToContent="WidthAndHeight" ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <ctrl:ConstantNodeUserControl Grid.Row="0"/>
        <Button Grid.Row="1" Click="Button_Click">Refresh</Button>
    </Grid>
</Window>
